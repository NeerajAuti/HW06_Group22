<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarFragment">


    <ImageButton
        android:id="@+id/F1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="56dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_f_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/F2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_f_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/F1" />

    <ImageButton
        android:id="@+id/F3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="11dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_f_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/F2" />

    <ImageButton
        android:id="@+id/M1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="29dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_m_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/M3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_m_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/M2" />

    <ImageButton
        android:id="@+id/M2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="27dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_m_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/M1" />

</androidx.constraintlayout.widget.ConstraintLayout>